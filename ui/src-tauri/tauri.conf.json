{
  "package": {
    "productName": "Aurora",
    "version": "0.1.0"
  },
  "build": {
    "beforeDevCommand": "pnpm run dev:vite",
    "beforeBuildCommand": "pnpm run build:vite",
    "devPath": "http://localhost:4175",
    "distDir": "../dist/"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/app-icon.png",
      "iconAsTemplate": false,
      "menuOnLeftClick": false
    },
    "bundle": {
      "active": true,
      "identifier": "com.finailabz.aurora",
      "targets": ["app", "dmg", "nsis", "deb", "appimage"],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "../../popular-models.yaml",
        "../../scripts/install-cli.sh",
        "../../scripts/uninstall-macos.sh",
        "../../scripts/uninstall-linux.sh",
        "../../scripts/uninstall-windows.ps1"
      ],
      "externalBin": [],
      "shortDescription": "Local LLM Inference Desktop App",
      "longDescription": "Aurora is a powerful desktop application for running local LLM inference with GGUF models. Built with Rust, React, and Tauri by FinAI Labz.",
      "copyright": "Copyright (c) 2026 FinAI Labz",
      "category": "DeveloperTool",
      "deb": {
        "depends": []
      },
      "macOS": {
        "entitlements": null,
        "exceptionDomain": null,
        "frameworks": [],
        "minimumSystemVersion": "10.13"
      }
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "title": "Aurora",
        "label": "main",
        "width": 1200,
        "height": 820,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "visible": true,
        "skipTaskbar": false
      }
    ],
    "allowlist": {
      "shell": {
        "all": true,
        "open": true
      },
      "fs": {
        "all": true
      },
      "http": {
        "all": true
      },
      "notification": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "window": {
        "all": true
      },
      "globalShortcut": {
        "all": true
      }
    },
    "security": {
      "csp": null
    }
  }
}
